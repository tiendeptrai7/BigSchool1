@model IEnumerable<BigSchool1.Models.Course>

@{
    ViewBag.Title = "Mine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mine quản lý khóa học đã tham dự</h2>
<div class="row" style="margin-top: 10px">
    <ul class="course">
        @foreach (var course in Model)
        {
            <li>
                <div class="date">
                    <div class="month">
                        @course.DateTime.ToString("MM")
                    </div>
                    <div class="day">
                        @course.DateTime.ToString("dd")
                    </div>
                </div>
                <div class="detail">
                    <span class="lecture">
                        @course.LecturerId
                    </span>
                    <span class="category">
                        @course.Category.Name
                    </span>
                </div>
                <div class="action">
                    <a href="/Courses/Edit/@course.Id">Edit</a>
                    <a href="/Courses/Delete/@course.Id">Delete</a>
                </div>
            </li>
        }
    </ul>
</div>
